<% include partials/header %>

            <h1 style="text-align: center"> Add new campground</h1>
            <div style="width: 30%; margin: 20px auto;">
                        <form action="/campgrounds" method="POST">
                            <div class="form-group">
                                    <input class="form-control" type="text" name="campName" placeholder="Enter name">
                            </div>
                            <div class="form-group">
                                    <input class="form-control" type="text" name="campImage" placeholder="Enter image url">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="description" placeholder="Enter descrtiption">
                            </div>
                            <div class="form-group">
                                    <button type="submit" class="btn btn-dark btn-sm btn-block">Submit</button>
                            </div>
                            
                        </form>
                        
                        <a class="btn btn-sm btn-danger" href="/campgrounds">Back</a>
            </div>





