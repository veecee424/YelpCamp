<% include partials/header %>

            <h1 style="text-align: center"> Edit <%= camp.name %></h1>
            <div style="width: 30%; margin: 20px auto;">
                        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                            <div class="form-group">
                                    <input class="form-control" type="text" name="name" value="<%= camp.name %>">
                            </div>
                            <div class="form-group">
                                    <input class="form-control" type="text" name="image" value="<%= camp.image %>">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" value="<%= camp.price %>">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="description" value="<%= camp.description %>">
                            </div>
                            <div class="form-group">
                                    <button type="submit" class="btn btn-dark btn-sm btn-block">Submit</button>
                            </div>
                            
                        </form>
                        
                        <a class="btn btn-sm btn-danger" href="/campgrounds">Back</a>
            </div>





<% include partials/footer %>